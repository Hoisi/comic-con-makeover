{% comment %}
  Related Products Section - Hyde Hermit Studio
{% endcomment %}

{% if recommendations.products_count > 0 %}
<section class="related-products">
  <div class="container">
    <h2 class="related-products-title">{{ section.settings.heading }}</h2>
    
    <div class="products-grid">
      {% for product in recommendations.products limit: section.settings.products_to_show %}
        {% render 'product-card', product: product %}
      {% endfor %}
    </div>
  </div>
</section>
{% endif %}

{% schema %}
{
  "name": "Related Products",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "You May Also Like"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 8,
      "step": 1,
      "default": 4,
      "label": "Products to show"
    }
  ]
}
{% endschema %}

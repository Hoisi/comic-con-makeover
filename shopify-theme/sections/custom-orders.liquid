{% comment %}
  Custom Orders Section - Hyde Hermit Studio
{% endcomment %}

<section id="custom-orders" class="custom-orders-section">
  <div class="custom-orders-pattern"></div>
  
  <div class="container custom-orders-container">
    <div class="custom-orders-header">
      <h2 class="custom-orders-title">{{ section.settings.title }}</h2>
      <p class="custom-orders-subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <div class="custom-orders-grid">
      {% for block in section.blocks %}
        <div class="custom-orders-card" {{ block.shopify_attributes }}>
          <div class="custom-orders-icon">
            {% case block.settings.icon %}
              {% when 'palette' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="13.5" cy="6.5" r=".5" fill="currentColor"/>
                  <circle cx="17.5" cy="10.5" r=".5" fill="currentColor"/>
                  <circle cx="8.5" cy="7.5" r=".5" fill="currentColor"/>
                  <circle cx="6.5" cy="12.5" r=".5" fill="currentColor"/>
                  <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.926 0 1.648-.746 1.648-1.688 0-.437-.18-.835-.437-1.125-.29-.289-.438-.652-.438-1.125a1.64 1.64 0 0 1 1.668-1.668h1.996c3.051 0 5.555-2.503 5.555-5.555C21.965 6.012 17.461 2 12 2z"/>
                </svg>
              {% when 'package' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="m7.5 4.27 9 5.15"/>
                  <path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"/>
                  <path d="m3.3 7 8.7 5 8.7-5"/>
                  <path d="M12 22V12"/>
                </svg>
              {% when 'message' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"/>
                </svg>
              {% else %}
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"/>
                </svg>
            {% endcase %}
          </div>
          <h3 class="custom-orders-card-title">{{ block.settings.title }}</h3>
          <p class="custom-orders-card-text">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>

    <div class="custom-orders-footer">
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" class="btn btn-custom-orders">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
      {% if section.settings.email != blank %}
        <p class="custom-orders-email">
          Or email us directly at 
          <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
        </p>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Orders",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Custom Orders"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Have a unique vision? We bring your ideas to life with custom merchandise, artwork, and exclusive collaborations tailored just for you."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Inquire About Custom Orders"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Contact Email",
      "default": "hydehermitstudios@gmail.com"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "palette", "label": "Palette" },
            { "value": "package", "label": "Package" },
            { "value": "message", "label": "Message" }
          ],
          "default": "palette"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Custom Artwork"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Commission original pieces featuring your characters, concepts, or brand identity."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Orders",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon": "palette",
            "title": "Custom Artwork",
            "description": "Commission original pieces featuring your characters, concepts, or brand identity."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "package",
            "title": "Bulk & Wholesale",
            "description": "Perfect for events, conventions, or retail. Get special pricing on large orders."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon": "message",
            "title": "Collaborations",
            "description": "Partner with us for exclusive merch drops, artist collabs, or special projects."
          }
        }
      ]
    }
  ]
}
{% endschema %}

{% comment %}
  Community Section - Hyde Hermit Studio Discord CTA
{% endcomment %}

<section class="community-section">
  <div class="community-pattern-bg"></div>
  <div class="community-overlay"></div>
  
  <div class="container community-container">
    <div class="community-card">
      <div class="community-layout">
        <!-- Mascot Image -->
        <div class="community-image">
          {% if section.settings.image %}
            <img 
              src="{{ section.settings.image | img_url: '800x' }}" 
              alt="{{ section.settings.image.alt | escape | default: 'Discord mascot' }}"
              loading="lazy"
            >
          {% else %}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {% endif %}
        </div>
        
        <!-- Content -->
        <div class="community-content">
          <h2 class="community-title">{{ section.settings.title }}</h2>
          <p class="community-text">{{ section.settings.description }}</p>
          {% if section.settings.button_text != blank %}
            <a 
              href="{{ section.settings.button_link }}" 
              class="btn btn-community"
              target="_blank" 
              rel="noopener noreferrer"
            >
              {{ section.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Community Discord",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Mascot Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Join Our Discord Community!"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Connect with fellow creators, share your work, and get exclusive updates"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Join"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Community Discord"
    }
  ]
}
{% endschema %}

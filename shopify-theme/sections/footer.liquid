{% comment %}
  Footer Section - Hyde Hermit Studio
{% endcomment %}

<footer class="footer">
  <!-- Decorative palm tree -->
  <img 
    src="{{ 'palm-tree-footer.png' | asset_url }}" 
    alt="" 
    class="footer-palm" 
    aria-hidden="true"
  >
  
  <div class="container footer-content">
    <div class="footer-grid">
      <!-- Logo Column -->
      <div class="footer-logo">
        <img 
          src="{{ 'hyde-logo.png' | asset_url }}" 
          alt="{{ shop.name }}"
        >
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="footer-heading">Quick Links</h4>
        <ul class="footer-links">
          <li><a href="#about">About Us</a></li>
          <li><a href="/collections/all">Products</a></li>
          <li><a href="/pages/custom-orders">Custom Orders</a></li>
          <li><a href="/policies/terms-of-service">Terms of Service</a></li>
          <li><a href="/policies/privacy-policy">Privacy Policy</a></li>
        </ul>
      </div>
      
      <!-- Support -->
      <div>
        <h4 class="footer-heading">Support</h4>
        <ul class="footer-links">
          <li><a href="/pages/faq">FAQ</a></li>
          <li><a href="/policies/shipping-policy">Shipping</a></li>
          <li><a href="/policies/refund-policy">Returns</a></li>
          <li><a href="/pages/contact">Contact Us</a></li>
        </ul>
      </div>
      
      <!-- Connect -->
      <div>
        <h4 class="footer-heading">Connect</h4>
        <div class="footer-social">
          {% if settings.social_facebook_link != blank %}
            <a href="{{ settings.social_facebook_link }}" aria-label="Facebook" target="_blank" rel="noopener">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
              </svg>
            </a>
          {% endif %}
          
          {% if settings.social_instagram_link != blank %}
            <a href="{{ settings.social_instagram_link }}" aria-label="Instagram" target="_blank" rel="noopener">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
              </svg>
            </a>
          {% endif %}
          
          {% if settings.social_twitter_link != blank %}
            <a href="{{ settings.social_twitter_link }}" aria-label="X (Twitter)" target="_blank" rel="noopener">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
              </svg>
            </a>
          {% endif %}
          
          {% if settings.social_tiktok_link != blank %}
            <a href="{{ settings.social_tiktok_link }}" aria-label="TikTok" target="_blank" rel="noopener">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z" />
              </svg>
            </a>
          {% endif %}
          
          <a href="mailto:{{ shop.email }}" aria-label="Email">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <!-- Bottom Section -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <div>
          <p class="footer-payment-label">We Accept</p>
          <div class="footer-payment-icons">
            {{ 'visa' | payment_type_svg_tag: class: 'payment-icon' }}
            {{ 'master' | payment_type_svg_tag: class: 'payment-icon' }}
            {{ 'american_express' | payment_type_svg_tag: class: 'payment-icon' }}
            {{ 'apple_pay' | payment_type_svg_tag: class: 'payment-icon' }}
            {{ 'google_pay' | payment_type_svg_tag: class: 'payment-icon' }}
            {{ 'paypal' | payment_type_svg_tag: class: 'payment-icon' }}
          </div>
        </div>
        
        <p class="footer-copyright">
          &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": []
}
{% endschema %}

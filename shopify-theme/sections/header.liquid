{% comment %}
  Header Section - Hyde Hermit Studio
{% endcomment %}

<header class="header">
  <div class="container header-inner">
    <a href="/" class="header-logo">
      {{ 'hyde-logo.png' | asset_url | img_tag: shop.name }}
    </a>

    <nav class="header-nav">
      <a href="#about">About Us</a>
      <a href="/collections/all">Products</a>
      <a href="#custom">Clients</a>
      <a href="#booth-portfolio">Booth Portfolio</a>
      
      <a href="/cart" class="header-cart">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="m1 1 4 4 2.68 11.55a2 2 0 0 0 2 1.45h9.72a2 2 0 0 0 2-1.45L23 6H6"></path>
        </svg>
        {% if cart.item_count > 0 %}
          <span class="cart-count">{{ cart.item_count }}</span>
        {% endif %}
      </a>
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}

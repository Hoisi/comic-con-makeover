{% comment %}
  Instagram Feed Section - Hyde Hermit Studio
{% endcomment %}

<section class="instagram-section">
  <div class="instagram-bg" style="background-image: url('{{ 'pixel-moai-pattern.jpg' | asset_url }}');"></div>
  <div class="instagram-overlay"></div>
  
  <div class="container instagram-content">
    <div class="instagram-header">
      <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
      <h2>{{ section.settings.heading }}</h2>
    </div>
    <p class="instagram-subtitle">{{ section.settings.subtitle }}</p>

    <div class="instagram-grid">
      {% for block in section.blocks %}
        <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" class="instagram-post" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            <img 
              src="{{ block.settings.image | image_url: width: 400 }}" 
              alt="Instagram post"
              loading="lazy"
            >
          {% else %}
            <div class="instagram-placeholder">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
            </div>
          {% endif %}
          <div class="instagram-post-overlay">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
          </div>
        </a>
      {% endfor %}
    </div>

    <div class="instagram-cta">
      <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" class="instagram-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
        <span>{{ section.settings.button_text }}</span>
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Instagram Feed",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Follow Us on Instagram"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "@hydehermitstudio - Check out our latest updates and behind-the-scenes content"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL",
      "default": "https://instagram.com/hydehermit"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View More on Instagram"
    }
  ],
  "blocks": [
    {
      "type": "post",
      "name": "Instagram Post",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Post Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Instagram Feed",
      "blocks": [
        { "type": "post" },
        { "type": "post" },
        { "type": "post" },
        { "type": "post" },
        { "type": "post" },
        { "type": "post" }
      ]
    }
  ],
  "max_blocks": 6
}
{% endschema %}
